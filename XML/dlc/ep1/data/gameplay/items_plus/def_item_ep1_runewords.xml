			</ability>

			<ability name="Runeword 5 _Stats">
				<tags>Runeword</tags>
			</ability>

			<ability name="Runeword 6 _Stats">
				<tags>Runeword</tags>

				<runeword6_duration_bonus type="mult" min="4" />
			</ability>

			<ability name="Runeword 8 _Stats">
				<tags>Runeword</tags>
			</ability>
