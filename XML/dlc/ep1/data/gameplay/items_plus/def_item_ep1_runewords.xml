				<damage_mult type="mult" min="0.67" />
				<glyphword5_chance type="add" min="0.3" />
			</ability>

			<ability name="Glyphword 6 _Stats">
				<tags>Glyphword</tags>

				<glyphword6_stamina_drain_perc type="add" min="1.0" />
			</ability>

			<ability name="Glyphword 7 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<ability name="Glyphword 8 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<ability name="Glyphword 10 _Stats">
				<tags>Glyphword</tags>
				
				<glyphword_range type="add" min="15" />
			</ability>

			<ability name="Glyphword 12 _Stats">
				<tags>Glyphword</tags>

				<!-- delay in secs between burning application test (optimalization) -->
				<glyphword12_burning_delay type="add" min="1.0" />

				<!-- range in which enemies get burned -->
				<glyphword12_range type="add" min="2.0" />
				
				<!-- duration of burning on triggered enemies -->
				<duration type="add" min="1" />
				
				<!-- burn chance -->
				<glyphword12_chance type="add" min="1.0" />
			</ability>	  

			<ability name="Glyphword 14 _Stats">
				<tags>Glyphword</tags>

				<increas_duration type="add" min="2" />
			</ability>
			
			<ability name="Glyphword 15 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<ability name="Glyphword 17 _Stats">
				<tags>Glyphword</tags>

				<quen_apply_chance type="add" min="1.0" />
			</ability>

			<ability name="Glyphword 18 _Stats">
				<tags>Glyphword</tags>

				<increas_duration type="add" min="2" />
				<glyphword_range type="add" min="15" />
			</ability>

			<ability name="Glyphword 20 _Stats">
				<tags>Glyphword</tags>

				<radius type="add" always_random="false" min="3" />

				<!-- scales with SP -->
				<FireDamage type="add" min="50" max="50" />
			</ability>	  
