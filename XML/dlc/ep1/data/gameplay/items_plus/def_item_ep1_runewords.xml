				<staminaRegen 			type="mult"	min="0.25" 	/>
				<toxicityRegen 			type="add" 	min="-2" 	/>
				<focus_drain 			type="mult" min="0.08" 	/>
			</ability>

			<ability name="Runeword 10 _Stats">
				<tags>Runeword</tags>
				
				<!-- <stamina type="mult" min="0.25" /> -->
				<stamina_runeword_gain type="mult" min="1.0" />
			</ability>

			<ability name="Runeword 11 _Stats">
				<tags>Runeword</tags>
				<duration type="add" min="1.0" />
			</ability>

			<ability name="Runeword 12 _Stats">
				<tags>Runeword</tags>
				
				<!-- <focus type="add" min="0.1" max="0.25" /> -->
				<focus_runeword_gain type="add" min="1.0" max="1.0" />
			</ability>

			<!-- Armors -->
			<ability name="Glyphword 1 _Stats">
				<tags>Glyphword</tags>
			</ability>

			<ability name="Glyphword 2 _Stats">
